include ./Header.pug
include ./Footer.pug

//- Layout Component
//- 
//- This component receives only title and description via props.
//- Header and Footer components access global data directly (global.siteName, etc.)
//- 
//- Data flow:
//- - Page-specific: title, description → passed as props
//- - Global: siteName, navigation, footer → accessed via global.* in Header/Footer
//- 
//- Alternative approach (more explicit, recommended for complex apps):
//-   component Layout()
//-     - const { title, description, siteName, navigation, footer } = $props
//-     Header(siteName=siteName navigation=navigation)
//-     Footer(footer=footer siteName=siteName)

component Layout()
  - const { title, description } = $props
  
  doctype html
  html(lang="ja")
    head
      meta(charset="UTF-8")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      title= title
      if description
        meta(name="description" content=description)
      script(src="https://cdn.tailwindcss.com")
      style.
        [class*="hover_"] { transition: all 0.2s; }
        .hover_shadow-xl:hover { box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1); }
        .hover_shadow-lg:hover { box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1); }
        .hover_scale-105:hover { transform: scale(1.05); }
        .hover_border-blue-200:hover { border-color: rgb(191 219 254); }
        .hover_bg-blue-700:hover { background-color: rgb(29 78 216); }
        .hover_bg-blue-800:hover { background-color: rgb(30 64 175); }
        .hover_bg-blue-50:hover { background-color: rgb(239 246 255); }
        .hover_bg-opacity-30:hover { background-color: rgba(255, 255, 255, 0.3); }
        .hover_bg-opacity-90:hover { background-color: rgba(255, 255, 255, 0.9); }
        .hover_text-blue-600:hover { color: rgb(37 99 235); }
        .hover_text-blue-800:hover { color: rgb(30 64 175); }
      slot(head)
    
    body
      slot(header)
        Header()
      
      main
        slot(main)
          p Main content goes here.
      
      slot(footer)
        Footer()
